
<div id ="inner">

<h1>Sign in</h1>

<%= form_tag sessions_path do %>

   		 <%= label_tag :email %><br />
   	     <div class= "form-group">
    		<%= text_field_tag :email , params[:email] ,  options = {:placeholder => "Username"  , :class => "form-control"  ,:id=>"input_size"}%>
		</div> 
 		<div class= "form-group">
   			 <%= label_tag :password %><br />
   			 <%= password_field_tag :password ,params[:password] , options = {:placeholder => "Password" , :class => "form-control" , :id =>"input_size"}%>
		</div>
  <%= submit_tag "Log in" , options = {:class => "btn btn-success"} %>

<% end %>

	</div>

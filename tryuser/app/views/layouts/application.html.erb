<div id= "margin"></div>
<% flash.each do |name, msg| %>
  <div id = "errorahmed">
    <div id = "inner">
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
  </div>
</div>
<% end %>
<%= yield %>


<footer class="footer">
      <div class="container">
        <p class="text-muted">Place sticky footer content here.</p>
      </div>
    </footer>

</body>

  <title></title>









  
  <title>Tryuser</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>



<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">CodSiga</a>
        </div>
        <center>
            <div class="navbar-collapse collapse" id="navbar-main">
              
                <%= link_to "New Post" , new_post_path , options = { :class => "btn btn-default" ,:id => "ahmed"} %>

                <form class="navbar-form navbar-right" role="search">
                    <div id="user_nav">
                     <% if current_user %>
                     <p style="color:white;font-size:15px;">
                      Logged in as <%= current_user.email %>
                        <%= link_to "Log out", log_out_path , options = { :class => "btn btn-default" , :id => "logoutbutton"}  %>
                      </p>
                     <% else %>
                     <%= link_to '<button type="submit" class="btn btn-default">Sign Up</button>'.html_safe, sign_up_path %> or
                     <%= link_to '<button type="submit" class="btn btn-default">Sign In</button>'.html_safe, log_in_path %>
                    <% end %>
                      </div>
                    
                    
                </form>
            </div>
        </center>
    </div>
</div>




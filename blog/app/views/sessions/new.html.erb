
<div align="center" >
 <div id="margin2"></div>

<%= form_tag sessions_path do %>
   		 <div class="textdesign"><%= label_tag :email %><br /></div>
   	     <div class= "form-group">
    		<%= text_field_tag :email , params[:email] ,  options = {:placeholder => "Username"  , :class => "form-control"  ,:id=>"input_size" }%>
		</div> 
 		<div class= "form-group">
   			 <div class="textdesign"><%= label_tag :password %><br /></div>
   			 <%= password_field_tag :password ,params[:password] , options = {:placeholder => "Password" , :class => "form-control" , :id =>"input_size"}%>
		</div>
  <%= submit_tag "Log in" , options = {:class => "btn btn-success" , :id => "button-css"} %>

<% end %>

	</div>
